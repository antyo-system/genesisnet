{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "."
    /* opsional nanti:
    "paths": { "@common/*": ["packages/lib-common/src/*"] }
    */
  },
  "exclude": ["node_modules", "dist", ".dfx", "infra", "sandbox"]
}
