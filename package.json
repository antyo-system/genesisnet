{
  "name": "genesisnet",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run -ws --if-present dev",
    "build": "npm run -ws --if-present build",
    "start": "npm run -ws --if-present start",
    "test": "npm run -ws --if-present test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "db:migrate": "knex --knexfile packages/db/knexfile.cjs migrate:latest",
    "db:reset": "knex --knexfile packages/db/knexfile.cjs migrate:rollback --all && npm run db:migrate",
    "db:seed": "knex --knexfile packages/db/knexfile.cjs seed:run"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^20.14.11",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "knex": "^2.5.1",
    "lint-staged": "^15.2.10",
    "pg": "^8.11.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
